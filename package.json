  },
  "resolutions": {
    "jss": "^10.0.0-alpha.3"
  },
  "devDependencies": {
    "wsrun": "^3.6.2"
  },
  "jest": {
    "projects": [
      "spent-core",
      "spent-cli-parser",
      "spent-app"
    ]
  }
}
